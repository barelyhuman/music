#!/usr/bin/env bash

# example 
# update start  => start the server
# update => restart the server

APP_NAME="music-unified"

source ~/.nvm/nvm.sh
nvm use 14 

git pull origin master
yarn install --frozen-lockfile 
yarn build 

if [ "$1" == "start" ];then 
    pm2 start "yarn start -p 3001" --name=$APP_NAME
else
    pm2 restart $APP_NAME
fi



