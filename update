#!/usr/bin/env bash

# example 
# update => just update the server
# update start => start the server
# update kill => kill the server
# update restart => restart the server
# update noop v2 => update with v2


APP_NAME="music-unified"

cd "$(dirname "$0")"

source ~/.nvm/nvm.sh
CURRENT_VERSION=$(node -v)
nvm install 20
nvm use 20
INTERPRETER_PATH=$(which node)

git fetch --all

if [ -z "$2" ]; then 
    git pull origin main
else
    git checkout "$2" 
fi

npm i -g pnpm@9.9.0

pnpm install --frozen-lockfile 
pnpm build

nvm use $CURRENT_VERSION

case "$1" in
    start) pm2 --interpreter="$INTERPRETER_PATH" start "PORT=3001 node .output/server/index.mjs" --name=$APP_NAME ;;
    kill) pm2 --interpreter="$INTERPRETER_PATH" del $APP_NAME ;;
    restart) pm2 --interpreter="$INTERPRETER_PATH" restart $APP_NAME --update-env;;
esac

